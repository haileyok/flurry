{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"strictFunctionTypes": false,
		"noImplicitReturns": true,
		"baseUrl": ".",
		"module": "es2022",
		"skipLibCheck": true,
		"paths": {
			"@root/*": [
				"*"
			],
			"@src/*": [
				"src/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"./node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx"
	]
}
